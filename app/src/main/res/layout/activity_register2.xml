<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register2">

    <Button
        android:id="@+id/btnRegFin"
        android:layout_width="160dp"
        android:layout_height="66dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/darker_gray"
        android:drawableEnd="@drawable/ic_check"
        android:text="FINISH"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPasswordConf" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="139dp"
        android:layout_height="136dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnSelectDP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnSelectDP"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_marginBottom="50dp"
        android:text="Add Picture"
        app:layout_constraintBottom_toTopOf="@+id/UnitSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/UnitSpinner"
        android:layout_width="207dp"
        android:layout_height="54dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/landmarkSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectDP" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/landmarkSpinner"
        android:layout_width="207dp"
        android:layout_height="54dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRegFin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UnitSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>